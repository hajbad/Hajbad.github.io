<!--Accordion wrapper-->
<div class="accordion my-4 {{ class }}" id="{{ parent }}" role="tablist" aria-multiselectable="true">
    <h5 class="bolder text-align-center mb-3">{{ vars.title }}</h5>
    {% for item in items %}

    <!-- Accordion card -->
    <div class="card my-2 {{ vars.cardClass }}">

        <!-- Card header -->
        <div class="card-header " role="tab" id="heading-{{ parent }}-{{ item.id }}" >
            <div data-toggle="collapse" data-parent="#{{ parent }}" href="#collapse-{{ parent }}-{{ item.id }}" aria-expanded="true" aria-controls="collapse-{{ parent }}-{{ item.id }}">
                <h5 class="mb-0 d-flex justify-content-{{ linkTextAlign }}  ">
                    <span class="link">{{ item.title }}</span>
                    {% if item.extraHeaderLink %}
                     <span>
                        <small class="mr-2 badge-pill grey darken-4 p-1" >{{ item.extraHeaderLink }}</small>
                        <i class="fas fa-angle-down rotate-icon  link"></i>
                     </span>
                    {% endif %}
                </h5>
            </div>

        </div>

        <!-- Card body -->
        <div id="collapse-{{ parent }}-{{ item.id }}" class="collapse  {{ collapse }}" role="tabpanel" aria-labelledby="heading-{{ parent }}-{{ item.id }}" data-parent="#{{ parent }}">
            <div class="card-body white-text">
                {{ item.content }}
            </div>
        </div>
    </div>
    <!-- Accordion card -->
    {% endfor %}
</div>