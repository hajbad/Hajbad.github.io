{#
/**
 * @file
 * Default theme implementation for a 'form' element.
 *
 * Available variables
 * - attributes: A list of HTML attributes for the wrapper element.
 * - children: The child elements of the form.
 *
 * @see template_preprocess_form()
 *
 * @ingroup themeable
 */
#}
{%
    set classes = [
    'my-5',
    'mx-md-5',
]
%}


<div class="user-login-form my-4  py-4">
    {#<form{{ attributes }}>#}
        {#{{ form.form_build_id }}#}
        {#{{ form.form_token }}#}
        {#{{ form.form_id }}#}


        {#haja here#}
        {#{{ kint(form) }}#}

        <form {{ attributes.addClass(classes) }} >
            {{ form.form_build_id }}
            {{ form.form_token }}
            {{ form.form_id }}

            <div class="row">
                <div class="col-md-6 mx-auto">
                    <div class="card">

                        <div class="card-body">

                                <h3 class="font-weight-bold my-4 pb-2 text-center ">Log In</h3>

                                {#<input type="email" id="defaultSubscriptionFormPassword" class="form-control mb-4" placeholder="Email">#}
                                {{ form.name }}

                                {#<input type="password" id="defaultSubscriptionFormEmail" class="form-control" placeholder="Password">#}
                                {{ form.pass }}
                                <small id="passwordHelpBlock" class="form-text text-right blue-text">
                                    <a href="/user/password">Recover Password</a>
                                </small>

                                <div class="text-center">
                                         {#<button type="button" class="btn btn-outline-orange btn-rounded my-4 waves-effect">Warning</button>#}
                               {{ form.actions }}

                                </div>

                                <p class="bolder my-4 pb-2 text-center ">OR</p>

                                <div class="flex-center my-4">
                                    <a href="/user/login/facebook" class="flex-center ">
                                    <img src="/themes/epsops/assets/icons/fb-continue-logo.png" class="w-50">
                                    </a>
                                </div>

                        </div>

                    </div>
                </div>
            </div>

        </form>

    {#</form>#}
</div>
