{% set dataFetch = vars.cumulative_data ? 'Youtube Fetch' : 'Local Fetch'  %}
<small class="d-inline-flex justify-con tent-center white-text ">{{ vars.requestOptions.topicType }}</small>

{% if(vars.topic_id) %}
<h2 class="card-title pt-2 orange-text"><a class="amber-text" href="/topic/{{ vars.topic_id }}">{{ vars.requestOptions.topicString }}</a></h2>
{% else %}
<h2 class="card-title pt-2 orange-text">{{ vars.requestOptions.topicString }}</h2>
{% endif %}

{% if(vars.grouped_vg) %}
<div class="fixed-top-left m-3">
    {#<span class="badge-pill"><i class="fas fa-fire"></i> {{  vars.grouped_vg|round|number_format }}</span>#}
    <span class="chip chip-lg grey darken-4 white-text">
        <img src="/themes/viralfetch/assets/img/vg.png" alt="VG">
        {#<i class="fas fa-fire"></i>#}
        {{  vars.grouped_vg|round|number_format }}

    </span>
    <p class="small"><strong>{{ vars.items|length|number_format }}</strong> videos in last {{ daysToYears(vars.requestOptions.timeAgo) }} years</p>
</div>
{% endif %}

<span class="fixed-top-right m-3"><i class="fas fa-exclamation-circle fa-2x" data-toggle="tooltip" data-placement="top" data-original-title="{{ dataFetch }}"></i> </span>

<div id="{{ id }}" class="carousel slide carousel-fade pb-3" data-ride="{{ vars.carouselSlide ? 'carousel': 'false'  }}">

    <ol class="carousel-indicators ">
        {#<li data-target="#carousel-example-1z" data-slide-to="0" class="active"></li>#}
        {#<li data-target="#carousel-example-1z" data-slide-to="1"></li>#}
        {#<li data-target="#carousel-example-1z" data-slide-to="2"></li>#}
        {% for item in  vars.items %}
            <li data-target="#{{ id }}" data-slide-to="{{ loop.index }}"></li>
        {% endfor %}
    </ol>
    <div class="carousel-inner" role="listbox">
        {#<!--First slide-->#}
        {#<div class="carousel-item active">#}
            {#<img class="d-block w-100" src="https://mdbootstrap.com/img/Photos/Slides/img%20(130).jpg" alt="First slide">#}
        {#</div>#}
        {% for item in  vars.items %}
            <div class="carousel-item  {{ loop.index == 1 ? 'active'  }}">
                {#<img class="d-block w-100" src="https://mdbootstrap.com/img/Photos/Slides/img%20(130).jpg" alt="First slide">#}
                {{ item }}
            </div>
        {% endfor %}

    </div>
    <a class="carousel-control-prev" href="#{{ id }}" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#{{ id }}" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>

    {{ (vars.vModels) }}
</div>
